<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_ServerAddress"
        android:title="网络服务器地址"
        android:summary="设置网络服务器地址，从而可以向此地址查询信息"
        />
    <EditTextPreference
        android:key="@string/pref_ServerPort"
        android:title="网络服务器端口"
        android:summary="设置网络服务器端口，从而可以向此端口查询信息"
        />

    <EditTextPreference
        android:key="@string/pref_Interval"
        android:title="更新间隔"
        android:summary="设置向服务器访问的时间间隔，"
        />
    <EditTextPreference
        android:key="@string/pref_UserAccountID"
        android:title="用户身份ID"
        android:summary="设置用户身份ID，将来应当被用户账户绑定"
        />


    <ListPreference
        android:title="连接设置"
        android:summary="选择在何种网络环境下连接服务器"
        android:key="listPref"
        android:defaultValue="Wi-Fi"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues"
     />

</PreferenceScreen>
